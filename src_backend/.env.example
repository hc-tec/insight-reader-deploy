# ==========================================
# InsightReader Backend Configuration
# ==========================================
#
# Instructions:
# 1. Copy this file to .env
# 2. Fill in the required values
# 3. Keep .env file secure and never commit it
#
# ==========================================

# ==========================================
# Database Configuration
# ==========================================

# PostgreSQL Database URL (Production)
# Format: postgresql://username:password@host:port/database
# Example: postgresql://postgres:password@localhost:5432/insightreader
# If this is set, PostgreSQL will be used; otherwise SQLite will be used
STORAGE_DATABASE_URL=

# SQLite Database URL (Development, auto-configured)
# DATABASE_URL=sqlite:///./insightreader_v2.db

# ==========================================
# OpenAI API Configuration
# ==========================================

OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_API_KEY=your-openai-api-key-here

# ==========================================
# Application Configuration
# ==========================================

APP_NAME=InsightReader API
APP_VERSION=2.0.0
DEBUG=false

# ==========================================
# JWT Authentication Configuration
# ==========================================

# Secret key for signing JWT tokens (change this in production)
SECRET_KEY=your-very-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080  # 7 days

# ==========================================
# AI Configuration
# ==========================================

MAX_CONTEXT_LENGTH=2000
DEFAULT_MODEL=gpt-4o
SIMPLE_MODEL=gpt-4o-mini
REASONING_MODEL=deepseek-reasoner
MAX_TOKENS=1000
TEMPERATURE=0.7

# ==========================================
# CORS Configuration
# ==========================================

CORS_ORIGINS=["http://localhost:3000","http://localhost:3001"]

# ==========================================
# Google OAuth (Optional)
# ==========================================

GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=http://localhost:8888/api/v1/auth/google/callback

# ==========================================
# GitHub OAuth (Optional)
# ==========================================

GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
GITHUB_REDIRECT_URI=http://localhost:8000/api/v1/auth/github/callback

# ==========================================
# Email Configuration (Magic Links, Optional)
# ==========================================

MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_FROM=
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_TLS=true
MAIL_SSL=false

# Magic Link expiration time (minutes)
MAGIC_LINK_EXPIRATION_MINUTES=15

# Frontend URL
FRONTEND_URL=http://localhost:3000
